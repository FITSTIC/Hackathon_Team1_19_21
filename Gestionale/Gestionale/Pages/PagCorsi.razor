@page "/Corsi"
@using Gestionale.Data
@using Microsoft.EntityFrameworkCore
@inject ApplicationDbContext db


<h2>Corsi</h2>

@if (ListaCorsi == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#staticBackdrop">
        Launch static backdrop modal
    </button>

    <!-- Modal -->
    <div class="modal fade" id="staticBackdrop" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    ...
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Understood</button>
                </div>
            </div>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Anno Accademico</th>
                <th>Inizio corso</th>
                <th>Fine corso</th>
                <th>Sede</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Corso in ListaCorsi)
            {
                <tr>
                    <td>@Corso.Nome</td>
                    <td>@Corso.AnnoAccademico</td>
                    <td>@Corso.AnnoInizioCorso.ToString("MM/yyyy")</td>
                    <td>@Corso.AnnoFineCorso.ToString("yyyy")</td>
                    <td>@Corso.Sede</td>
                </tr>
            }
        </tbody>
    </table>

}

@code
{
    private Corsi[] ListaCorsi;

    protected override async Task OnInitializedAsync()
    {
        ListaCorsi = await db.Corsi.ToArrayAsync();
    }
}