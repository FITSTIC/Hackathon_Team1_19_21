@page "/About"
@inject IJSRuntime js

<button class="btn mr-n2 float-right arrowBack" title="Pagina principale"><img src="images/icon/back.png" width="35" height="32" /></button>
<h2>About</h2>
<hr />

<div class="container-fluid text-center">
    <p><h2>Gestionale</h2></p>
    <p><h3>Progetto Hackathon - Team 1</h3></p>
    <div class="row">
        <div class="col-12">
            <h5>
                Quest'applicazione è stata realizzata dal Team 1 del project work "Hackathon" seguita dal Prof. Matteo Venturi
                all'interno del corso ITS FITSTIC Alan Turing (2019/2021).
            </h5>
        </div>
        <div class="col-6"><a href="https://www.fitstic.it/"><img src="/images/fitstic.jpg" width="190" height="100"/></a></div>
        <div class="col-6"><a href="https://www.fitstic.it/it/b/154/tecnicosuperioreperlosvilupposoftwarewebecloud"><img src="/images/turing.png" width="190" height="100"/></a></div>
        <div class="col-12 mt-4">
            <h5>Il Team 1 è formato da:</h5>
        </div>
        <div class="col-12">
            <ul class="list-group list-group-horizontal d-flex justify-content-center">
                <li class="list-group-item"><b>Chiara Barzagli</b></li>
                <li class="list-group-item"><b>Matteo Calafato</b></li>
                <li class="list-group-item"><b>Teresa Cobianchi</b></li>
                <li class="list-group-item"><b>Maddalena Di Dio Cianciolo</b></li>
            </ul>
        </div>
        <div class="col-12 row mt-4">
            <div class="col-12"><h5>Linguaggi utilizzati</h5></div>
            <div class="col"><img src="/images/csharp.png" width="100" height="100" /></div>
            <div class="col"><img src="/images/html5.png" width="100" height="100" /></div>
            <div class="col"><img src="/images/css.png" width="100" height="100" /></div>
            <div class="col"><img src="/images/js.png" width="100" height="100" /></div>
        </div>
        <div class="col-12 row my-4">
            <div class="col-12"><h5>Risorse utilizzate::</h5></div>
            <div class="col"><a href="https://visualstudio.microsoft.com/it/"><img src="/images/vs.png" width="100" height="100" /></a></div>
            <div class="col"><a href="https://dotnet.microsoft.com/apps/aspnet/web-apps/blazor"><img src="/images/blaz.png" width="100" height="100" /></a></div>
            <div class="col"><a href="https://getbootstrap.com/"><img src="/images/b.png" width="100" height="100" /></a></div>
            <div class="col"><a href="https://github.com/"><img src="/images/git.png" width="100" height="100" /></a></div>
        </div>
    </div>
</div>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await js.InvokeVoidAsync("Global");
        }
    }
}
