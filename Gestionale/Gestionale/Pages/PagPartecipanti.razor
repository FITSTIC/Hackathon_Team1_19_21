@page "/Partecipanti"
@using Gestionale.Data
@using Microsoft.EntityFrameworkCore
@inject ApplicationDbContext db

<div class="row">
    <div class="col align-self-start">
        <h2>Partecipanti</h2>
    </div>
    <div class="mr-1">
        <!--<button class="btn btn-success" data-toggle="modal" title="Aggiungi un nuovo partecipante" href="/inserimentopartecipanti" ><b>+</b></button>-->

        <a href="/Inserimentopartecipanti" data-toggle="modal" title="Aggiungi un nuovo partecipante" class="btn btn-success">+</a>
        
    </div>
    <div class="mr-4">
        <button class="btn btn-danger" title="Elimina il partecipante selezionato"><b>–</b></button> <!-- Aggiungere Funzione -->
    </div>
</div>
@if (ListaPartecipanti == null)
{

}
else
{
    <table class="table table-hover">
        <thead>
            <tr class="table-secondary">

                <th><input type="checkbox"></th>
                <!--<th>Foto</th>-->
                <th>Nome</th>
                <th>Cognome</th>
                <th>Data di nascita</th>
                <th>Indirizzo</th>
                <th>Città</th>
                <th>Telefono</th>
                <th>E-Mail</th>
                <th>Diploma</th>
                <th>Anno Diploma</th>
                <th>Data dell'Iscrizione</th>
                <th>Corso</th>
            </tr>
        </thead>
        <tbody class="accordion" id="boolAccord">
            @foreach (var Partecipante in ListaPartecipanti)
            {
            <tr>
                <td><input type="checkbox"></td>               
                <td>@Partecipante.Nome</td>
                <td>@Partecipante.Cognome</td>
                <td>@Partecipante.DataNascita.ToString("dd/MM/yyyy")</td>
                <td>@Partecipante.Indirizzo</td>
                <td>@Partecipante.Citta</td>
                <td>@Partecipante.Telefono</td>
                <td>@Partecipante.Email</td>
                <td>@Partecipante.Diploma</td>
                <td>@Partecipante.AnnoDiploma.ToString("dd/MM/yyyy")</td>
                <td>@Partecipante.Iscrizioni.DataIscrizione.ToString("dd/MM/yyyy")</td>
                <td>@Partecipante.Corsi.Nome</td>

                <td>
                    <button class="btn btn-success" data-toggle="modal" title="Visualizza le informazioni del partecipante" data-target="#InfoPartecipanti"><b>+</b></button>

                    <!-- Modale inserimento modulo -->
                    <div class="modal fade" id="InfoPartecipanti" tabindex="-1" role="dialog" aria-labelledby="" aria-hidden="true">
                        <div class="modal-dialog modal-lg modal-dialog-scrollable" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Visualizza le informazioni del partecipante</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">

                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label>Nome</label>
                                            
                                            <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="@Partecipante.Nome">
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label>Cognome</label>
                                            
                                            <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="@Partecipante.Cognome">

                                        </div>

                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label>Data di nascita</label>
                                            
                                            <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="@Partecipante.DataNascita.ToString("dd/MM/yyyy")">
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label>Indirizzo</label>
                                            <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="@Partecipante.Indirizzo">
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label>Città</label>
                                            <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="@Partecipante.Citta">
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label>Telefono</label>
                                            <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="@Partecipante.Telefono">
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label>E-Mail</label>
                                            <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="@Partecipante.Email">
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label>Diploma</label>
                                            <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="@Partecipante.Diploma">
                                        </div>

                                        <div class="form-group col-md-6">
                                            <label>Anno diploma</label>

                                           <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="@Partecipante.AnnoDiploma.ToString("dd/MM/yyyy")">
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label>Data Iscrizione</label>
                                            <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="@Partecipante.Iscrizioni.DataIscrizione.ToString("dd/MM/yyyy")">
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label>Corso</label>

                                            <select id="" class="form-control" value="@Partecipante.Corsi.Nome" readonly> 
                                                <!-- inserire id -->
                                                @*@foreach (Corsi corso in ListaCorsi)
                                    {
                                        <option selected>
                                            @if (corso.Nome == Corsi.Nome)
                                            {
                                        @corso.Nome;
                                        }
                                      </option>
                                    }*@
                                            </select>
                                        </div>
                                    </div>

                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Chiudi</button>
                                        <button type="button" onclick="/Inserimentopartecipanti"class="btn btn-primary">Inserisci</button> <!-- AGGIUNGERE FUNZIONE -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </td>
            </tr>
    }
        </tbody>
    </table>
}


    @code { // private Moduli[] ListaModuli;
        private Corsi[] ListaCorsi; // Da modificare in esami
        private Partecipanti[] ListaPartecipanti;
        private Iscrizioni[] ListaIscrizioni;
        protected override async Task OnInitializedAsync()
        {
            //ListaModuli = await db.Moduli.ToArrayAsync();

            ListaPartecipanti = await db.Partecipanti.ToArrayAsync();
            ListaCorsi = await db.Corsi.ToArrayAsync();
            ListaIscrizioni = await db.Iscrizioni.ToArrayAsync();
        }
          }
