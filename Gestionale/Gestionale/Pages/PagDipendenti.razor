@page "/Personale"
@using Gestionale.Data
@using Microsoft.EntityFrameworkCore
@inject ApplicationDbContext db
@code{
    Gestionale.Data.Control.DipendenteDbService personaleService = new Data.Control.DipendenteDbService();
    Gestionale.Data.Control.CorsoDbService corsoService = new Data.Control.CorsoDbService();
}

<div class="row mb-2">
    <div class="col align-self-start">
        <h2>Dipendenti</h2>
    </div>
</div>


@if (ListaPersonale == null || !ListaPersonale.Any())
{
    <p>Non è presente alcun modulo per questo corso. Aggiungine uno premendo il tasto verde.</p>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr class="table-secondary">
                <th></th>
                <th>Nome</th>
                <th>Cognome</th>
                <th>Categoria</th>
                <th>Corso</th>
                <th></th>
                <th class="text-center" style="width: 1px;"><a href="/AddModulo" class="btn btn-success" title="Aggiungi un nuovo modulo"><b>+</b></a></th>
            </tr>
        </thead>
        <tbody class="accordion" id="boolAccord">
            @foreach (var p in ListaPersonale)
             {
                <tr>
                    <td>
                        <button class="btn btn-danger" title="Elimina questo modulo" @onclick="()=>BtnDelete(p)"><b>–</b></button> <!-- Aggiungere Funzione -->
                    </td>
                    <td>@p.Nome</td>
                    <td>@p.Cognome</td>
                    <td>@p.Categoria</td>
                    <td>@corsoService.Read(db,p.CorsiId).Result.Nome</td>
                    <td style="text-align:center;">
                        <a href="/AddDipendente/Info/@p.Id" class="btn btn-warning accordion-toggle" title="Info Dipendente">Info</a>
                        <!--<button class="btn btn-warning accordion-toggle" type="button" data-toggle="collapse" data-target="#("e"+p.Id)">Info</button>-->
                    </td>
                    <td>
                        <a href="/AddDipendente/@p.Id" class="btn btn-link mr-n2 float-right" title="Modifica"><img src="/css/gear.ico" width="27" height="32" /></a>
                    </td>
                </tr>            
             }
            <!-- Riga vuota per debug del collapse, senza l'ultima riga non riesce ad aprire collapse -->
            <tr>
                <td>
                </td>
            </tr>
        </tbody>
    </table> <!-- fine tabella Dipendenti -->
}

