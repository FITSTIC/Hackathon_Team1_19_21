    //private Coordinatore NuovoCoordinatore = new Coordinatore() { };

    protected override async Task OnInitializedAsync()
    {
        ListaPersonale = await db.Dipendente.ToArrayAsync();
        ListaCorsi = await db.Corsi.ToArrayAsync();
    }

    protected async Task BtnSalva(Dipendente d)
    {
        switch (d.Categoria)
        {
            case "Coordinatore":
                db.Coordinatore.Add(new Coordinatore(d));
                break;
            case "Tutor":
                db.Tutor.Add(new Tutor(d));
                break;
            case "Insegnante":
                db.Insegnanti.Add(new Insegnante(d));
                break;
        }
        await personaleService.Create(db, d);
        ListaCorsi = await db.Corsi.ToArrayAsync();
        StateHasChanged();
    }
